#version 430 core

uniform vec3 thecolor;

in vec3 vs_normal;

layout(location=0) out vec4 color;

void main()
{
  vec3 n = normalize(vs_normal);
  vec3 l = normalize(vec3(1,1,1));
  
  float n_dot_l = max( dot( n, l ), 0 );

  color = vec4( thecolor * n_dot_l, 1 );
  //color = vec4( n, 1 );
  //color = vec4( 1 );
}
